# MCP Server Configuration
# Copy this file to .env and fill in your values

# Server settings
MCP_API_KEY=your-secret-api-key-here
MCP_PORT=8765
MCP_HOST=127.0.0.1

# Filesystem security - all file operations restricted to this directory
# Use absolute path. Default: user home directory
MCP_BASE_DIR=~

# Enable/disable toolsets (comma-separated)
# Available: system, gmail, discord
MCP_ENABLED_TOOLSETS=system

# Gmail OAuth (Phase 2)
# Place credentials.json in the mcp_server directory
# token.pickle will be generated after first OAuth flow

# Discord Bot (Phase 3)
# DISCORD_BOT_TOKEN=your-discord-bot-token

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
